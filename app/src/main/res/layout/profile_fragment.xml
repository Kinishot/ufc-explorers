<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/profile-pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:srcCompat="@drawable/ic_person_black_24dp"
            tools:srcCompat="@tools:sample/avatars"/>

    <TextView
            android:text="Joãozinho Forrozeiro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile-title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile-pic"
            app:layout_constraintStart_toStartOf="@+id/profile-pic"
            app:layout_constraintEnd_toEndOf="@+id/profile-pic"
            android:textAlignment="center"
            tools:text="Joãozinho Forrozeiro"/>
</android.support.constraint.ConstraintLayout>